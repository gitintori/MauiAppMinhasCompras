<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems> <!-- Fazer os botoes no menu superior -->
        <ToolbarItem Text="Somar" Clicked="Botao_Somar_Clicked" />
        <ToolbarItem Text="Adicionar" Clicked="Botao_Adicionar_Clicked"/>
        <ToolbarItem Text="Remover" Clicked="Botao_Remover_Clicked"/>
        
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" 
                   Placeholder="Busca de Produtos"
                   TextChanged="txt_search_TextChanged"/> <!-- Criar a barra de busca-->
            <ListView x:Name="lst_produtos">
                <ListView.Header>
                    <Grid ColumnDefinitions="*, *, *, *, *, Auto"> <!-- Coluna extra "auto" para o botao remover-->
                        <Label Grid.Column="0" Text="ID" />
                        <Label Grid.Column="1" Text="Descrição" />
                        <Label Grid.Column="2" Text="Preço" />
                        <Label Grid.Column="3" Text="Quantidade" />
                    <Label Grid.Column="4" Text="Total" />
                    </Grid>
                </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="Botao_Remover_Clicked"/> <!--Este faz remover quando clica com o botao direito do mouse-->
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="*, *, *, *, *">
                            <Label Grid.Column="0" Text="{Binding Id}" />
                            <Label Grid.Column="1" Text="{Binding Descricao}" />
                            <Label Grid.Column="2" Text="{Binding Preco}" />
                            <Label Grid.Column="3" Text="{Binding Quantidade}" />
                            <Label Grid.Column="4" Text="{Binding Total}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>